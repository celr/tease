@model IEnumerable<Tease_Server.Models.Project>

@{
    ViewBag.Title = "Lista de proyectos";
}

<h2>Lista de proyectos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
@if (Model.Count()>0) {
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ProjectID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.ProjectID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.ProjectID }) |
            @Html.ActionLink("Abrir", "Index", "Page", new {projectId=item.ProjectID}, null)
        </td>
    </tr>
}
    
</table>
}
else
{
    <p>
        No tienes ningún proyecto.
    </p>
}